.footer-container
    display: flex
    justify-content: center
    margin-bottom: 20px

.footer-meta
    font-size: 15px
    color: #00FFFF
    width: 100%
    margin: 0 0
    display: inline-flex

    a
        color: #00FFFF
        &:hover
            color: #00FFFF

.footer-meta > div:not(:last-child)
    margin-right: 20px

#top
  width 30px
  height 30px
  background rgba(85, 85, 85, 0.3) none repeat scroll 0% 0%
  position fixed
  bottom 1%
  right 3%
  text-align center
  cursor pointer
  filter: invert(0%) !important; /* 使#top元素不受反转影响 */

#top a {
  display: block;
  font-size: 25px;
  line-height: 25px;
  color: #00FFFF;  /* 设置链接颜色 */
  text-decoration: none;
}