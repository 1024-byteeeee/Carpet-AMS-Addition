.footer-container
    display: flex
    justify-content: center
    margin-bottom: 20px

.footer-meta
    font-size: 15px
    color: #999
    width: 100%
    margin: 0 0
    display: inline-flex

    a
        color: #777
        &:hover
            color: #555

.footer-meta > div:not(:last-child)
    margin-right: 20px

#top
  width 30px
  height 30px
  background rgba(85, 85, 85, 0.3) none repeat scroll 0% 0%
  position fixed
  bottom 1%
  right 3%
  text-align center
  cursor pointer
  a
    display block
    font-size 25px
    line-height 25px
    color #7c2609
    text-decoration none