.header-container
    margin-top: 20px
    display: flex
    justify-content: center

.header-menu-list
    width: 100%
    margin: 0 10px
    ul
        text-align: left
        list-style-type: none
        margin: 0
        display: inline-flex
        font-weight: bold;
        border: 5px solid black;
        padding: 10px;
    li:not(:last-child)
        margin-right: 50px

@media screen and (max-width: 600px)
    .header-menu-list
        ul
            text-align: center
            display: flex
            flex-direction: column
        li:not(:last-child)
            margin-right: 1px
